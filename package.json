{
  "name": "tugasin",
  "version": "1.0.0",
  "description": "Guest-only Kanban board application",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm --filter client dev\" \"pnpm --filter server dev\"",
    "db:setup": "cd apps/server && npx prisma generate && npx prisma migrate deploy",
    "cleanup": "node apps/server/src/cron/boardCleanup.js",
    "build": "pnpm --filter client build && pnpm --filter server build"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "workspaces": [
    "apps/*"
  ]
}